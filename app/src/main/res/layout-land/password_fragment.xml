<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@id/passwordFragment"
    android:layout_width="match_parent"
    android:layout_height="477dp"
    android:background="@color/enabledFunction"
    android:visibility="gone"
    android:weightSum="1.0"
    android:orientation="vertical"
    tools:showIn="@layout/full_screen">

    <Button
        android:id="@id/passwordReturnButton"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_gravity="left"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_weight="0.09"
        android:background="#eeeeee"
        android:clickable="true"
        android:enabled="true"
        android:text="Return"
        android:textSize="24sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="-40dp"
        android:gravity="center_horizontal"
        android:text="Password Required"
        android:textColor="#5c5c5c"
        android:textSize="36sp" />

    <EditText
        android:id="@id/passwordEditText"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:ems="10"
        android:inputType="numberDecimal" />

    <Button
        android:id="@id/passwordContinueButton"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:layout_weight="0.09"
        android:background="@drawable/enabled_button_shape"
        android:clickable="true"
        android:enabled="true"
        android:text="CONTINUE"
        android:textSize="36sp"
        android:textStyle="bold" />
</LinearLayout>