<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@id/poweroffFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/enabledFunction"
    android:visibility="gone"
    android:weightSum="1.0"
    android:orientation="vertical"
    tools:showIn="@layout/full_screen">

    <TextView
        android:layout_width="800dp"
        android:layout_height="150dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="100dp"
        android:gravity="center_horizontal"
        android:text="@string/poweroff_verbiage"
        android:textColor="#5c5c5c"
        android:textSize="36sp" />

    <Button
        android:id="@id/poweroffButton"
        android:layout_width="400dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="26dp"
        android:layout_weight="0.09"
        android:background="@drawable/enabled_button_shape"
        android:clickable="true"
        android:enabled="true"
        android:text="POWER OFF"
        android:textSize="36sp"
        android:textStyle="bold" />
</LinearLayout>